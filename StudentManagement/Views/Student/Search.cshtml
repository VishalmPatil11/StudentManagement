@model IEnumerable<StudentManagement.Models.Student>

@{
    ViewData["Title"] = "Search";
}

<h1>Search</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<form id="searchForm" method="get" asp-action="Search">
    <div class="input-group mb-3">
        <input type="text" name="searchString" id="searchString" value="@ViewBag.SearchString" class="form-control" placeholder="Enter name or age" />
        <button type="submit" class="btn btn-outline-secondary">Search</button>
    </div>
</form>
<script>
    (function(){
        var form = document.getElementById('searchForm');
        if (!form) return;
        form.addEventListener('submit', function (e) {
            var v = document.getElementById('searchString').value;
            if (!v || !v.trim()) {
                e.preventDefault();
                // show inline message instead of alert
                var existing = document.getElementById('searchError');
                if (!existing) {
                    var p = document.createElement('div');
                    p.id = 'searchError';
                    p.className = 'text-danger mb-2';
                    p.innerText = 'Please enter a search term.';
                    form.parentNode.insertBefore(p, form.nextSibling);
                }
            }
        });
    })();
</script>
@if (Model != null && Model.Any()){

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Course)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Course)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id">Details</a>
            </td>
        </tr>
}
    </tbody>
</table>
}
else
{
    if (!string.IsNullOrWhiteSpace((string)ViewBag.SearchString))
    {
        <p>No students found for "@ViewBag.SearchString"</p>
    }
    else
    {
        <p>No Students</p>
    }
}
<p>
    <a asp-action="Index">Go to Student page</a>
</p>
