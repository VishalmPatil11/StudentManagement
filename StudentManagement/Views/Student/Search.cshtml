@model IEnumerable<StudentManagement.Models.Student>

@{
    ViewData["Title"] = "Search";
}

<h1>Search</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<form id="searchForm" method="get" asp-action="Search">
    <div class="mb-3">
        <div class="input-group">
            <input type="text" name="searchString" id="searchString" value="@ViewBag.SearchString" class="form-control @(ViewBag.SearchError != null ? "is-invalid" : "")" placeholder="Enter name or age" />
            <button type="submit" class="btn btn-primary">Search</button>
        </div>
        @if (ViewBag.SearchError != null)
        {
            <div class="invalid-feedback d-block">@ViewBag.SearchError</div>
        }
    </div>
</form>
@if (Model != null && Model.Any()){

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Course)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Course)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id">Details</a>
            </td>
        </tr>
}
    </tbody>
</table>
}
else
{
    if (!string.IsNullOrWhiteSpace((string)ViewBag.SearchString))
    {
        <p>No students found for "@ViewBag.SearchString"</p>
    }
    else
    {
        <p>No Students</p>
    }
}
<p>
    <a asp-action="Index">Go to Student page</a>
</p>
